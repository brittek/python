{
  "extends": [
    "config:base"
  ],
  "prConcurrentLimit": 0,
  "rebaseWhen": "never",
  "masterIssue": true,
  "pip_requirements": {
    "fileMatch": ["requirements-test.txt"]
  },
  "packageRules": [
    {
      "matchPackageNames": ["pytest"],
      "matchUpdateTypes": ["minor", "major"]
    }
  ],
  "constraints": {
    "python": "3.8.6"
  },
  "schedule": ["before 8am on the first day of the month"]
}
